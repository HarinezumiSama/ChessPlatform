<Window x:Class="ChessPlatform.UI.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="MainWindow" Height="480" Width="640"
        WindowStartupLocation="CenterScreen" Margin="0">
    <Grid Name="MainGrid" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Name="StatusLabel" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Foreground="DarkMagenta" />
        <Grid Name="BoardGrid" Margin="0" Grid.Row="1" Grid.Column="0" />
    </Grid>
</Window>